<%- include("header.ejs", {title}) %>
<style>
    body {
      font-family: sans-serif;
      margin: 0;
      padding: 20px;
      background-color: rgb(202, 219, 241);
    }
    ul {
      padding: 10px;
      list-style: none;
      margin: 0;
      color: red;
    }
  </style>
<body>
  <div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-8 rounded-md shadow-md w-80">
      <h2 class="text-center text-xl text-blue-600 mb-4"><%= title %></h2>
      <%- include("error.ejs", {messages}) %>
      <form action="<%=action%>" method="post">
        <div class="mb-4">
          <label for="name" class="block text-gray-700 <%= ishidden ? 'hidden' : '' %>">Name:</label>
          <input type="text" id="name" name="name" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 <%= ishidden ? 'hidden' : '' %> focus:ring focus:ring-blue-200 focus:ring-opacity-50" placeholder="Enter your name">
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-700">Email:</label>
          <input type="email" id="email" name="email" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" placeholder="Enter your email">
        </div>
        <div class="mb-4">
          <label for="password" class="block text-gray-700">Password:</label>
          <input type="password" id="password" name="password" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-300 focus:ring focus:ring-blue-200 focus:ring-opacity-50" placeholder="Enter your password">
        </div>
        <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-200 focus:ring-opacity-50"><%= buttonname %></button>
      </form>
      <a href="<%=ref%>" class="text-center bold text-l text-blue-600 m-4"><%=account_status%></a>
    </div>
  </div>
</body>
</html>
