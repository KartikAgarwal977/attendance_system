<%- include("header.ejs", {title:"Home"})  %>
<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-8">
    <div class="flex justify-between">
      <form action="/add_student" class="mb-4">
        <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">Add Student</button>
      </form>
      <form action="/add_Attendence">
        <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">Mark Attendence</button>
      </form>
      <form action="/checkClass">
        <button class="bg-blue-500 hover:bg-blue-600 text-white py-2 px-4 rounded">Check Classes</button>
      </form>
      <a href="/logout" class="mb-3 bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded">Logout</a>
    </div>
    <h1 class="text-3xl font-semibold mb-4 flex justify-between">Students List</h1>
    <table class="min-w-full divide-y divide-gray-200">
      <thead>
        <tr>
          <th scope="col"
            class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Student
            Name</th>
          <th scope="col"
            class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Enrollment
            No.</th>
          <th scope="col"
            class="px-6 py-3 bg-gray-50 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Attendence
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% student.forEach(function(student) { %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= student.StudentName %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= student.Student_enroll %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <%= student.attendence %>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
  </div>

</body>

</html>